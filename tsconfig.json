{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "src/App.tsx", "src/index.tsx", "src/main.tsx", "src/react-app-env.d.ts", "src/types.ts", "src/vite-env.d.ts", "src/pages/TodoList", "src/components/Button", "src/components/Input", "src/serverData", "src/components/Modal", "src/components/CircularProgressBar"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
